{
  "name": "ride-my-way-api",
  "version": "1.0.0",
  "description": "an simple implementation of a ride management API",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require babel-register ./server/tests/",
    "server": "nodemon ./server/index.js --exec babel-node",
    "clean": "rm -rf build && mkdir build",
    "coverage": "babel-node babel-istanbul cover _mocha --require ./server/tests/ -- --recursive --check-coverage ",
    "coveralls": "npm run coverage --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "build-babel": "babel -d ./build ./server -s ",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index.js"
  },
  "keywords": [
    "api",
    "ride",
    "eslint",
    "mocha",
    "tdd"
  ],
  "engines": {
    "node": "10.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jojitoon/ride-my-way-api"
  },
  "author": "jojitoon",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-istanbul": "^0.12.2",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "babel-plugin-import": "^1.8.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "npm": "^6.1.0"
  }
}
