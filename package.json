{
  "name": "ride-my-way-api",
  "version": "1.0.0",
  "description": "an simple implementation of a ride management API",
  "main": "index.js",
  "scripts": {
    "test": "npm run create-table-test && npm run insert-table-test && cross-env NODE_ENV=test mocha --require babel-register ./server/tests/ride.test.js --timeout 6000 --exit",
    "server": "cross-env NODE_ENV=development nodemon ./server/index.js --exec babel-node",
    "clean": "rm -rf build && mkdir build",
    "coverage": "npm run create-table-test && npm run insert-table-test && cross-env NODE_ENV=test babel-node ./node_modules/babel-istanbul/lib/cli.js cover ./node_modules/.bin/_mocha --require --timeout 3000 ./server/tests/ride.test.js -- --recursive --check-coverage --exit",
    "coveralls": "npm run coverage --report lcovonly && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build-babel": "babel -d ./build ./server -s ",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index.js",
    "create-table-dev": "cross-env NODE_ENV=development babel-node ./server/api/v1/config/table.js --exit",
    "create-table-test": "cross-env NODE_ENV=test babel-node ./server/api/v1/config/table.js -- --exit",
    "insert-table-test": "cross-env NODE_ENV=test babel-node ./server/tests/dbinsert.js -- --exit"
  },
  "keywords": [
    "api",
    "ride",
    "eslint",
    "mocha",
    "tdd"
  ],
  "engines": {
    "node": "10.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jojitoon/ride-my-way-api"
  },
  "author": "jojitoon",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-istanbul": "^0.12.2",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "babel-plugin-import": "^1.8.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsend": "^1.0.2",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.0",
    "npm": "^6.1.0",
    "pg": "^7.4.3",
    "uuid": "^3.3.2"
  }
}
